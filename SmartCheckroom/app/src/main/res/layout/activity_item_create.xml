<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="parkettklub.smartcheckroom.ItemCreateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/barcode"
            android:textSize="@dimen/drawer_text_size"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/barcodeNumber"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/barcodeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:textSize="@dimen/drawer_text_size" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkroom"
            android:textSize="@dimen/drawer_text_size" />

        <Spinner
            android:id="@+id/checkroomNumber"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/drawer_text_size" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coatNum"
            android:textSize="@dimen/drawer_text_size" />

        <Button
            android:id="@+id/btnCoatPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="@dimen/drawer_text_size" />

        <TextView
            android:id="@+id/coatNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="50dp"
            android:textSize="@dimen/drawer_text_size" />

        <Button
            android:id="@+id/btnCoatMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="@dimen/drawer_text_size" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCreateCheckroomItem"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="@string/btnAdd"
        android:textSize="@dimen/drawer_text_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btnCancelCreateCheckroomItem"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="@string/btnCancel"
        android:textSize="@dimen/drawer_text_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
