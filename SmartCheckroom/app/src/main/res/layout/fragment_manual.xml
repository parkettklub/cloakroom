<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@color/primary_light"
    tools:context="parkettklub.smartcheckroom.fragments.ManualFragment">


    <EditText
        android:id="@+id/callEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="false"
        android:focusable="false"
        android:layout_toLeftOf="@+id/callBackSpaceButton"
        android:layout_toStartOf="@+id/callBackSpaceButton"
        android:textSize="@dimen/dialer_text_size"/>


    <ImageButton
        android:id="@+id/callBackSpaceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/callEditText"
        android:src="@drawable/backspace" />

    <Button
        android:id="@+id/call_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/add"
        android:textSize="30sp"
        style="@style/DialerButton"/>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/call_button"
        android:stretchColumns="*">

        <TableRow>

            <Button
                style="@style/DialerButton"
                android:text="1"
                android:id="@+id/one"/>

            <Button
                style="@style/DialerButton"
                android:text="2"
                android:id="@+id/two"/>

            <Button
                style="@style/DialerButton"
                android:text="3"
                android:id="@+id/three"/>
        </TableRow>

        <TableRow>

            <Button
                style="@style/DialerButton"
                android:text="4"
                android:id="@+id/four"/>

            <Button
                style="@style/DialerButton"
                android:text="5"
                android:id="@+id/five"/>

            <Button
                style="@style/DialerButton"
                android:text="6"
                android:id="@+id/six"/>
        </TableRow>

        <TableRow>

            <Button
                style="@style/DialerButton"
                android:text="7"
                android:id="@+id/seven"/>

            <Button
                style="@style/DialerButton"
                android:text="8"
                android:id="@+id/eight"/>

            <Button
                style="@style/DialerButton"
                android:text="9"
                android:id="@+id/nine"/>
        </TableRow>

        <TableRow>

            <Button
                style="@style/DialerButton"
                android:text="*" />


            <Button
                style="@style/DialerButton"
                android:text="0"
                android:id="@+id/zero"/>

            <Button
                style="@style/DialerButton"
                android:text="#"
                android:id="@+id/hash"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>


